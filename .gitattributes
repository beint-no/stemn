# Normalize line endings to LF in repo and working tree
* text=auto eol=lf

# Explicitly enforce LF for common text formats
*.md   text eol=lf
*.html text eol=lf
*.htm  text eol=lf
*.css  text eol=lf
*.js   text eol=lf
*.ts   text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml  text eol=lf
*.xml  text eol=lf
*.sh   text eol=lf

# Keep Windows endings for scripts that may need CRLF
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf
